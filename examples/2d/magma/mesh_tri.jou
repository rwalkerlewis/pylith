# ----------------------------------------------------------------------
# Generate geometry
# ----------------------------------------------------------------------
playback 'geometry.jou'

# ----------------------------------------------------------------------
# Set discretization size
# ----------------------------------------------------------------------
surface domain size 300
surface intrusion size 100

# ----------------------------------------------------------------------
# Set the meshing scheme
# ----------------------------------------------------------------------
surface all scheme trimesh
# ----------------------------------------------------------------------
# Generate the mesh
# ----------------------------------------------------------------------
mesh curve 7
mesh surface intrusion
mesh surface domain
#refine curve 7 numsplit 2
# ----------------------------------------------------------------------
# Create entities for materials and boundary conditions
# ----------------------------------------------------------------------
playback 'bc.jou'

# ----------------------------------------------------------------------
# Export exodus file
# ----------------------------------------------------------------------
export mesh "mesh_quad.exo" dimension 2 overwrite
