# ----------------------------------------------------------------------
# Generate geometry
# ----------------------------------------------------------------------
#playback 'geometry.jou'

# ----------------------------------------------------------------------
# Create surface using vertices
# ----------------------------------------------------------------------

# Block is 2m x 2m
# -1 m <= x <= 1 m 
# -1 m <= y <= 1 m
reset
create vertex -1.0 -1.0 0.0
create vertex -1.0 +1.0 0.0
create vertex +1.0 +1.0 0.0
create vertex +1.0 -1.0 0.0
create surface vertex 1 2 3 4
delete vertex all


# ----------------------------------------------------------------------
# Set discretization size
# ----------------------------------------------------------------------
surface all size 0.25

# ----------------------------------------------------------------------
# Generate the mesh
# ----------------------------------------------------------------------
surface all scheme submap
mesh surface all


# ----------------------------------------------------------------------
# Create blocks for materials
# ----------------------------------------------------------------------
block 1 surface 1
block 1 name "poroelastic"
block 1 element type quad

# ----------------------------------------------------------------------
# Create nodeset for -x edge
# ----------------------------------------------------------------------
group "edge_xneg" add node in curve 1
nodeset 1 group edge_xneg
nodeset 1 name "edge_xneg"

# ----------------------------------------------------------------------
# Create nodeset for +y edge
# ----------------------------------------------------------------------
group "edge_ypos" add node in curve  2
nodeset 2 group edge_ypos
nodeset 2 name "edge_ypos"

# ----------------------------------------------------------------------
# Create nodeset for +x edge
# ----------------------------------------------------------------------
group "edge_xpos" add node in curve 3
nodeset 3 group edge_xpos
nodeset 3 name "edge_xpos"

# ----------------------------------------------------------------------
# Create nodeset for -y edge
# ----------------------------------------------------------------------
group "edge_yneg" add node in curve  4
nodeset 4 group edge_yneg
nodeset 4 name "edge_yneg"

# ----------------------------------------------------------------------
# Export exodus file
# ----------------------------------------------------------------------
export mesh "mesh_quad.exo" dimension 2 overwrite
